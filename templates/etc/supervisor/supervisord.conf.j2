[supervisord]
nodaemon = true
childlogdir = {{devpi_server_log_dir}}
user = {{devpi_server_user}}

[unix_http_server]
file = {{devpi_server_supervisord_socket}}
chmod = 700
chown = {{devpi_server_user}}
username = {{devpi_server_user}}
password = {SHA}{{devpi_server_password|hash('sha1')}}

[supervisorctl]
serverurl = unix://{{devpi_server_supervisord_socket}}

[include]
files = /etc/supervisor/conf.d/*.conf